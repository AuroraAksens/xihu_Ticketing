/* pages/subpage/details/details.wxss */
page {
  background-color: white;
}

.details {
  width: 100%;
}

.details>.headImg {
  width: 100%;
  height: 400rpx;
}

.details>.headImg>image {
  width: 100%;
  height: 30vh;
  position: fixed;
  top: 10vh;
  z-index: -10;
}

.details>.headImgs>image {
  width: 100%;
  height: 30vh;
  position: absolute;
  top: 10vh;
  z-index: -10;
}

.details>.bodyText {
  width: 100%;
  background-color: white;
  border-radius: 25rpx;
  z-index: 10;
  padding-bottom: 160rpx;
}

.details>.bodyText>.top {
  width: 85%;
  margin: auto;
  border-bottom: 1rpx solid #d3d3d3;
}

.details>.bodyText>.top>.left {
  width: 80%;
}

.details>.bodyText>.top>.left>.foot>.foot-box {
  font-size: 24rpx;
  color: black;
}

.details>.bodyText>.top>.left>.foot>.foot-box>.f-box{
  width: 15rpx;
  height: 15rpx;
  background-color: #992a31;
}


.details>.bodyText>.top>.right {
  width: 30%;
  position: absolute;
  right: 0;
}

.details>.bodyText>.top>.right>.body {
  width: 160rpx;
  height: 52rpx;
  position: relative;
}

.details>.bodyText>.top>.right>.body>.bodyText{
  width: 146rpx;
  height: 45rpx;
  background-color: white;
  text-align: center;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  border-radius: 10rpx;
  font-size: 22rpx;
  line-height: 45rpx;
}

.details>.bodyText>.top>.right>.body>image{
  width: 100%;
  height: 100%;
}


.details>.bodyText>.text {
  width: 85%;
  margin: auto;
  font-weight: bold;
}

.details>.bodyText>.text>.title {
  width: 100%;
  height: 60rpx;
  font-weight: bold;
  font-size: 26rpx;
}

.details>.bodyText>.text>.textBody {
  width: 100%;
  font-size: 20rpx;
  color: #979797;
  line-height: 40rpx;
}

.details>.bodyText>.text>.textBody>img {
  width: 400rpx;
  height: 400rpx;
  margin: auto;
}

.details>.footNav {
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  box-shadow: 0px -3px 6px rgba(0, 0, 0, 0.16);
  background-color: white;
}

.details>.footNav>.left {
  width: 40%;
  font-size: 27rpx;
}

.details>.footNav>.left>view {
  width: 105rpx;
}

/* .details>.footNav>.left>button{
  width: 20rpx;
  height: 20rpx;
} */
.details>.footNav>.right {
  width: 60%;
  background-color: #01CDCD;
  text-align: center;
  line-height: 120rpx;
  color: white;
  font-size: 33rpx;
}

.details>.footNav>.rights {
  width: 36%;
  background-color: #992a31;
  text-align: center;
  line-height: 120rpx;
  color: white;
  font-size: 33rpx;
}

/* 购买后 */
.listBox {
  width: 95%;
  margin: 20rpx auto;
  background-color: white;
  box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16);
}

.listBox>.title {
  width: 100%;
  color: #030303;
  font-size: 30rpx;
  font-weight: bold;
}

.listBox>.title>.active {
  width: 10rpx;
  height: 30rpx;
  background-color: #992a31;
}

.listBox>.body {
  width: 100%;
}

.pb {
  padding-bottom: 160rpx;
}

.butge {
  width: 300rpx;
  height: 80rpx;
  background-color: #01CDCD;
  color: white;
  text-align: center;
  line-height: 80rpx;
  border-radius: 20rpx;
  margin: 40rpx auto;
}


/* 去除button */
button::after {
  border: none;
}

button {
  background-color: transparent;
  padding-left: 0;
  padding-right: 0;
  line-height: inherit;
}

.button-hover {
  /*点击后样式*/
  background-color: transparent;
}