}

.timeOut {
  width: 95%;
  height: 500rpx;
  margin: auto;
  overflow: hidden;
  position: absolute;
  top: 160rpx;
}


.timeOut>image {
  width: 620rpx;
  height: 450rpx;
  position: relative;
}

.timeBG2 {
  width: 620rpx;
  height: 450rpx;
}

.timeOut>.time-box1 {
  width: 250rpx;
  height: 75rpx;
  background-color: white;
  text-align: center;
  position: absolute;
