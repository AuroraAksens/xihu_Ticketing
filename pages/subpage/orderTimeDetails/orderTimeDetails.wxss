.listBox {
  width: 95%;
  margin: 20rpx auto;
  background-color: white;
  box-shadow: 0px 3px 20px rgba(128, 124, 124, 0.16);
}

.listBox>.title {
  width: 100%;
  color: #030303;
  font-size: 30rpx;
  font-weight: bold;
}

.listBox>.title>.active {
  width: 10rpx;
  height: 30rpx;
  background-color: #2b579e;
}

.listBox>.body {
  width: 100%;
}

.listBox>.body>.body-box {
  border-bottom: 1rpx solid #ebebeb;
}

.user>image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.goOut {
  width: 60%;
  height: 80rpx;
  border-radius: 30rpx;
  color: white;
  text-align: center;
  line-height: 80rpx;
  background-color: #2b579e;
  margin: 30rpx auto 10rpx;
}