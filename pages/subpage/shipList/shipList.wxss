page {
  background-color: #fff;
}

/* 搜索框 */
.search {
  width: 90%;
  height: 70rpx;
  z-index: 5;
  border: 1px solid;
  margin: 20rpx auto;
  border-radius: 50rpx;
}

.search>.ss{
  width: 45rpx;
  height: 40rpx;
}

.search>.ss>image{
  width: 100%;
  height: 100%;
}

.search>.search-text {
  width: 580rpx;
  height: 65rpx;
  font-size: 24rpx;
  background-color: #FFFFFF;
}
/* 导航选项 */
.navbar {
  width: 90%;
  height: 60rpx;
  margin: 20rpx auto;
  overflow: scroll;
}

.navbar>.scroll {
  width: 670rpx;
  height: 60rpx;
  overflow-x: scroll;
  overflow-y: hidden;
}

.nav-box {
  width: 150rpx;
  height: 55rpx;
  margin-right: 15rpx;
  position: relative;
}

.nav-box>image {
  width: 100%;
  height: 100%;
}

.nav-box>.nav-text {
  width: 135rpx;
  height: 45rpx;
  background-color: white;
  text-align: center;
  line-height: 50rpx;
  position: absolute;
  top: 6rpx;
  right: 0;
  left: 0;
  margin: auto;
  z-index: 10;
  font-size: 22rpx;
  color: black;
}

.nav-box>.nav-texts {
  width: 135rpx;
  height: 45rpx;
  background-color: white;
  text-align: center;
  line-height: 50rpx;
  position: absolute;
  top: 6rpx;
  right: 0;
  left: 0;
  margin: auto;
  z-index: 10;
  border-radius: 10rpx;
  font-size: 22rpx;
  color: rgb(191 127 131);
  font-weight: bold;
}

/* 选项卡 */
.listCard {
  background-color: #fff;
  width: 90%;
  box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16);
  margin: 20rpx auto 40rpx auto;
  border: 1px solid rgb(170, 170, 170);
  position: relative;
}

.topIcon{
  width: 140rpx;
height: 60rpx;
background-color: #992a31;
position: absolute;
top: 0;
right: 0;
color: white;
text-align: center;
line-height: 60rpx;
z-index: 10;
font-size: 26rpx;
}

.listCard>.top {
  width: 100%;
  height: 280rpx;
}

.listCard>.top>image {
  width: 630rpx;
  height: 250rpx;
}

.listCard>.bottom { 
  width: 90%;
  margin: auto;
}

.listCard>.bottom>.title {
  color: #BEBEBE;
  font-size: 22rpx;
}

.listCard>.bottom>.body {
  color: rgb(77, 77, 77);
  font-size: 32rpx;
  font-weight: bold;
}

.listCard>.bottom>.body>image {
  width: 30rpx;
  height: 20rpx;
}

.listCard>.bottom>.foot {
  color: #992a31;
  font-size: 24rpx;
  font-weight: bold;
}


.listCard>.bottom>.foot>.foot-box>image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: -10rpx;
  left: 10rpx;
}

.Tips {
  width: 100%;
  font-size: 28rpx;
  color: gray;
  line-height: 60rpx;
  text-align: center;
}

